<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mingshu.goods">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="winning.framework.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/image_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".GoodsActivity" />
        <activity android:name=".WebViewActivity" />
        <activity android:name=".UploadGoodsActivity" />
        <activity android:name=".views.MyPopUpWindow" />
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AboutUsActivity" />
        <activity android:name=".UserManagerActivity" />
        <activity android:name=".GoodsListActivity" />
        <activity android:name=".UserTypeEditActivity" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".UserInfoEditActivity" />
        <activity android:name=".QuestionFeedbackActivity" />
        <activity android:name=".VersionInfoActivity" />
        <activity android:name=".GuideActivity" />
    </application>

</manifest>