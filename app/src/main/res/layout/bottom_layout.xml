<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:background="@color/colorBtnGray"
    android:baselineAligned="false">

    <LinearLayout

        android:id="@+id/line_bottom_goods"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:onClick="imageBtnClick">
        <ImageView
            android:id="@+id/image_btn_goods"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="#00000000"
            android:src="@drawable/image_btn_goods" />
        <TextView
            android:id="@+id/txt_goods"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="首页推荐"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_bottom_find"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:onClick="imageBtnClick">
        <ImageView
            android:id="@+id/image_btn_find"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="#00000000"
            android:src="@drawable/image_btn_find"/>
        <TextView
            android:id="@+id/txt_find"
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="10dp"
            android:layout_height="wrap_content"
            android:text="创新服务"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_bottom_coupon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:onClick="imageBtnClick">
        <ImageView
            android:id="@+id/image_btn_coupon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="#00000000"
            android:src="@drawable/image_btn_coupon"/>
        <TextView
            android:id="@+id/txt_coupon"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="粉丝福利"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_bottom_my"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:onClick="imageBtnClick">
        <ImageView
            android:id="@+id/image_btn_my"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="#00000000"
            android:src="@drawable/image_btn_my"/>
        <TextView
            android:id="@+id/txt_my"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="个人中心"/>

    </LinearLayout>
</LinearLayout>
