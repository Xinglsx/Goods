<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:text="修改密码"
            android:background="@color/colorTitle"
            android:gravity="center"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/txt_title"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:gravity="right"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="30dp"
                    android:text="旧密码:"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/edit_old_password"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_more_style"
                    android:textSize="18sp"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:inputType="textPassword"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical">
                <TextView
                    android:gravity="right"
                    android:layout_width="150dp"
                    android:paddingRight="30dp"
                    android:layout_height="wrap_content"
                    android:text="新密码:"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/edit_new_password"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_more_style"
                    android:textSize="18sp"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:inputType="textPassword"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical">
                <TextView
                    android:gravity="right"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="30dp"
                    android:text="确认密码:"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/edit_new_password2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="18sp"
                    android:background="@drawable/btn_more_style"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:inputType="textPassword"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="40dp">
                <Button
                    android:id="@+id/btn_save_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="确认修改"
                    android:textSize="20sp"
                    android:background="@color/colorBtnYellow"/>
                <Button
                    android:id="@+id/btn_cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginLeft="40dp"
                    android:text="取消修改"
                    android:background="@color/colorBtnGray"
                    android:textSize="20sp"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>