<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark">


        <TextView
            android:id="@+id/txt_pmp"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="D9推荐"
            android:textSize="30dp"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="50dp"/>

        <TextView
            android:visibility="invisible"
            android:id="@+id/txt_pmpAll"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text=" Personal Manage Project"
            android:textSize="25dp"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/btn_star_big_on" />

            <EditText
                android:id="@+id/txt_UserCode"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_lock_lock" />

            <EditText
                android:id="@+id/txt_Password"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/chk_AutoLogin"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_AutoLogin"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="自动登录"
                android:gravity="center"/>
            <CheckBox
                android:id="@+id/chk_RememberPassword"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_RememberPassword"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="记住密码"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_load"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:onClick="click"
                android:text="登录" />

            <Button
                android:id="@+id/btn_exit"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:onClick="click"
                android:text="退出" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:text="@string/register_word"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorGreen"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:onClick="click"
            />

    </LinearLayout>
</layout>