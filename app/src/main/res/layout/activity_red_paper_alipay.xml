<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="title"
            type="String"/>

        <variable
            name="backClick"
            type="android.view.View.OnClickListener"/>

        <variable
            name="shareClick"
            type="android.view.View.OnClickListener"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/include"
            layout="@layout/public_top_share_layout"
            bind:backClick="@{backClick}"
            bind:title="@{title}"
            bind:shareClick="@{shareClick}"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_pickup_redpaper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点击领取红包"
                android:layout_alignParentBottom="true"
                android:background="@color/colorBtnYellow"
                android:layout_margin="10dp"/>
            <ScrollView
                android:layout_above="@id/btn_pickup_redpaper"
                android:layout_below="@id/linlayout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/image_redpaper"
                        android:layout_gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/txt_pickup_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="领取说明"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:textColor="@color/colorGreen"/>
                    <TextView
                        android:id="@+id/txt_pickup_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="支付宝到店付红包0.1~99元！每天都可以领一次。点击领取直接进入支付宝客户端领取。"
                        android:textSize="18sp"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="35dp"
                        android:paddingRight="15dp"/>
                    <TextView
                        android:id="@+id/txt_use_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="使用说明"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:textColor="@color/colorGreen"/>
                    <TextView
                        android:id="@+id/txt_use_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="三天内有限，使用支付宝到店会功能购物即可直接抵扣。每天最多领一次，用红包用后可领取。"
                        android:textSize="18sp"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="35dp"
                        android:paddingRight="15dp"/>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>
</layout>
