<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorGoodsListBackground"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorGoodsListBackground"
            >

            <ImageView
                android:id="@+id/image_coupon_item"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_coupon_title_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:text="商品描述"
                    android:gravity="center_vertical"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_coupon_volume"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="月销"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/txt_coupon_endtime_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="结束时间"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_coupon_info_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="优惠券面值"
                        android:layout_weight="1"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center_vertical"/>


                    <TextView
                        android:id="@+id/txt_coupon_count_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="优惠券余量"
                        android:layout_weight="1"
                        android:textColor="@color/colorBtnGray"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>
