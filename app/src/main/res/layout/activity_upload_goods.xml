<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="data"
            type="com.mingshu.goods.models.GoodsInfo" />

        <variable
            name="title"
            type="String"/>

        <variable
            name="backClick"
            type="android.view.View.OnClickListener"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/public_top_layout"
            bind:title="@{title}"
            bind:backClick="@{backClick}"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_paste"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="一件粘贴 "
                        android:background="@color/colorBtnYellow"
                        android:layout_margin="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="商品描述:"
                        android:gravity="right"
                        android:layout_weight="2"
                        android:textSize="18sp" />
                    <EditText
                        android:id="@+id/txt_goods_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_more_style"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="5"
                        android:textSize="18sp"
                        android:padding="5dp"
                        android:lines="2"
                        android:text="@={data.description}"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="商品链接:"
                        android:gravity="right"
                        android:layout_weight="2"
                        android:textSize="18sp" />
                    <EditText
                        android:id="@+id/txt_goods_link"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_more_style"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="5"
                        android:textSize="18sp"
                        android:padding="5dp"
                        android:lines="2"
                        android:text="@={data.link}"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="商品吱口令:"
                        android:gravity="right"
                        android:layout_weight="2"
                        android:textSize="18sp" />
                    <EditText
                        android:id="@+id/txt_goods_command"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_more_style"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="5"
                        android:textSize="18sp"
                        android:padding="5dp"
                        android:lines="1"
                        android:text="@={data.command}"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="商品价格:"
                        android:gravity="right"
                        android:layout_weight="2"
                        android:textSize="18sp" />
                    <EditText
                        android:id="@+id/txt_goods_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_more_style"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="5"
                        android:textSize="18sp"
                        android:padding="5dp"
                        android:lines="2"
                        android:text="@={data.price}"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="失效日期:"
                        android:gravity="right"
                        android:layout_weight="2"
                        android:textSize="18sp" />
                    <EditText
                        android:id="@+id/txt_goods_expirydate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_more_style"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="5"
                        android:textSize="18sp"
                        android:padding="5dp"
                        android:lines="1"
                        android:text="@={data.expirydate}"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="推荐理由:"
                        android:gravity="right"
                        android:layout_weight="2"
                        android:textSize="18sp" />
                    <EditText
                        android:id="@+id/txt_goods_reason"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_more_style"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="5"
                        android:textSize="18sp"
                        android:padding="5dp"
                        android:lines="6"
                        android:text="@={data.reason}"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="15dp">
                        <Button
                            android:id="@+id/btn_add_goods_image"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="添加商品图片"
                            android:background="@color/colorBtnBackground2"/>
                        <Button
                            android:background="@color/colorBtnBackground2"
                            android:id="@+id/btn_add_buy_image"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="添加自购图片"
                            android:layout_marginLeft="30dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="15dp">
                        <ImageView
                            android:id="@+id/image_goods"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/image_default"
                            />
                        <ImageView
                            android:id="@+id/image_buy"
                            android:layout_marginLeft="30dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/image_default"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp">
                    <Button
                        android:id="@+id/btn_save_draft"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="保存草稿"
                        android:background="@color/colorBtnYellow"/>
                    <Button
                        android:id="@+id/btn_save_submit"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="提交审核 "
                        android:layout_marginLeft="40dp"
                        android:background="@color/colorBtnYellow"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGreen"
                    android:padding="8dp"
                    android:text="@string/audit_key"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
 </layout>
